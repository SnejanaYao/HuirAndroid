<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >


    <RelativeLayout
        android:id="@+id/show_users_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/show_users_iamge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/show_users_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/show_users_iamge"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:padding="5dp"
            android:singleLine="true"
            android:text="用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称用户昵称"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/show_users_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/show_users_iamge"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:padding="5dp"
            android:singleLine="true"
            android:text="[消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息]"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show_users_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="hh:ss"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>
