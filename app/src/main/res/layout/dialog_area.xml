<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/area_dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/area_country_layout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_top_line1" >

            <TextView
                android:id="@+id/area_country_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/str_area_country"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/area_country_spinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                android:entries="@array/country"
                android:layout_toRightOf="@+id/area_country_text"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/area_province_layout"
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/area_province_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/str_area_province"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/area_province_spinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                android:entries="@array/provice"
                android:layout_toRightOf="@+id/area_province_text"
                android:popupBackground="@color/colorWhite" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/area_city_layout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_top_line1" >

            <TextView
                android:id="@+id/area_city_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/str_area_city"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/area_city_spinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dropdown"
                android:layout_toRightOf="@+id/area_city_text"
                android:overlapAnchor="false"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite" >

            <Button
                android:id="@+id/area_save_btn"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/select_btn_color"
                android:text="@string/str_sure"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/area_cancel_btn"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toLeftOf="@+id/area_save_btn"
                android:background="@drawable/select_btn_exit_color"
                android:text="@string/str_cancle"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


